{
  "name": "mine-sweeper",
  "version": "1.0.0",
  "description": "マインスイーパーゲーム（人間プレイ可能 + AIプレイ可能なMCPサーバー）",
  "author": "bc0109695",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:mcp": "tsc -p tsconfig.mcp.json",
    "build:ws": "tsc -p tsconfig.ws.json",
    "preview": "vite preview",
    "mcp": "npm run build:mcp && node dist/mcp-server.js",
    "setup-cursor": "npm run build:mcp && node setup-cursor-mcp.js",
    "ws-server": "npm run build:ws && node dist/ws-server.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}

